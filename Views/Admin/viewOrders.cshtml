@model List<XtremeMobiles.Models.Order>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<table class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Customer Address</th>
            <th>Order Product</th>
            <th>Quantity</th>
            <th>Order Date</th>
            <th>Product Price</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Customer.Name</td>
                <td>@s.Customer.Address</td>
                <td>@s.pid</td>
                <td>@s.quantity</td>
                <td>@s.date</td>
                <td>@s.Product.Price</td>
                <td><a href="/Admin/deleteOrder/@s.Id">Delete</a></td>
            </tr>
        }
    </tbody>

</table>


