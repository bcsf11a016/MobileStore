@model List<XtremeMobiles.Models.Product>
@{
    ViewBag.Title = "Home";
}

<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
@section css
{
<style>
    .price-details {
        margin-top: 10px;
        border-top: 1px solid #d9230f;
    }

    .price-number {
        float: left;
        padding-top: 0px;
    }

    .price-details p span.rupees {
        font-size: 1.6em;
        font-family: 'ambleregular';
        color: #383838;
    }

    .add-cart {
        float: right;
        display: inline-block;
    }

        .add-cart h4 a {
            font-size: 0.9em;
            display: block;
            padding: 8px 15px;
            font-family: 'ambleregular';
            background: #d9230f;
            color: #FFF;
            text-decoration: none;
            outline: 0;
            -webkit-transition: all 0.5s ease-in-out;
            -moz-transition: all 0.5s ease-in-out;
            -o-transition: all 0.5s ease-in-out;
            transition: all 0.5s ease-in-out;
            margin-top: -10px;
        }

            .add-cart h4 a:hover {
                text-shadow: 0px 0px 1px #000;
                background: #d9230f;
            }

    .section {
        clear: both;
        padding: 0px;
        margin: 0px;
    }
</style>

}
<div class="bod">
    <div class="row" style="margin-bottom:70px">
        <div class="col-md-4 hidden-sm hidden-xs">
            <a class="navbar-brand " href="#">
                <img src="~/img/logo.png" alt="Xtreme Mobiles" />
            </a>
        </div>
        <div class="col-md-4 col-xs-12 col-md-offset-4">

            @if (@Session["user"] != null)
            {
                <div class="cart">
                    <h3>
                        Welcome to our Online Store! @Session["user"]
                    </h3>
                </div>
            }
        </div>
    </div>
    @if (@Session["user"] != null)
    {
        <div class="row">
            <div class="col-md-4 col-xs-12 col-md-offset-8" style="margin-top:-70px">

                <div class="shopping">
                    <div class="c1" style="display:inline-block;margin-right:10px;"><h1><span class="glyphicon glyphicon-shopping-cart"></span></h1></div>
                    <div class="c2" style="display:inline-block;">
                        <h3>
                            Your Shopping Cart
                        </h3>
                        <a href="/Cart/ViewCart" style="text-decoration:none;float:right">View Cart &raquo;</a>
                    </div>
                </div>

            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-3 col-xs-12 col-sm-12">
            <div class="categories">
                <ul class="list-unstyled">
                    <h3>Brands</h3>
                    <li>@Html.ActionLink("Nokia", "Nokia", "Brand")</li>
                    <li>@Html.ActionLink("HTC", "HTC", "Brand")</li>
                    <li>@Html.ActionLink("QMobile", "QMobile", "Brand")</li>
                    <li>@Html.ActionLink("Huawei", "Huawei", "Brand")</li>
                    <li>@Html.ActionLink("Samsung", "Samsung", "Brand")</li>
                    <li>@Html.ActionLink("iPhone", "iPhone", "Brand")</li>
                    <li>@Html.ActionLink("Sony", "Sony", "Brand")</li>
                    <li>@Html.ActionLink("Lenovo", "Lenovo", "Brand")</li>
                </ul>
            </div>
        </div>

        <div class="col-md-9 hidden-xs hidden-sm">

            <script src="~/Scripts/slider.js" type="text/javascript"></script>

            <div id="slider" class="action  hide-from-mobile">
                <img src="~/img/nokia.jpg" />
                <img src="~/img/iphone.jpg" />
                <img src="~/img/htc.jpg" />
            </div>
        </div>

    </div>
    <div class="hid">
        <div class="content">
            <div class="content_top">
                <div class="heading">
                    <h3>Latest Products</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-sm-6 col-xs-6 col-md-3">
                    <div class="thumbnail">
                        <a href="/Brand/Specifications?mod=@x.Model">
                            <img src="@x.Image" alt="" />
                        </a>

                        <h4 style="text-align:center">
                            @x.pId
                            <br />
                            @x.Model
                        </h4>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">Rs. @x.Price</span></p>
                            </div>
                            <div class="add-cart">
                                @if (@Session["user"] != null)
                                {
                                    <h4><a href="/Cart/AddToCart?mod=@x.Model">Add to Cart</a></h4>

                                }
                                else
                                {
                                    <h4><a href="/Account/Login">Add to Cart</a></h4>
                                }
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>